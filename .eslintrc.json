{
  "extends": "airbnb-base",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
    "error": {
      "ImportDeclaration": "never"
    }
  }
}
